@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_AuthLayout";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-6 mb-2">
                    <label asp-for="FirstName" class="form-label small"></label>
                    <input asp-for="FirstName" class="form-control form-control-sm" placeholder="First name" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>
                <div class="col-6 mb-2">
                    <label asp-for="LastName" class="form-label small"></label>
                    <input asp-for="LastName" class="form-control form-control-sm" placeholder="Last name" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
            </div>
            
            <div class="mb-2">
                <label asp-for="Email" class="form-label small"></label>
                <input asp-for="Email" class="form-control form-control-sm" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="mb-2">
                <label asp-for="Password" class="form-label small"></label>
                <input asp-for="Password" class="form-control form-control-sm" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
                <div class="form-text small">
                    Password must be at least 6 characters long.
                </div>
            </div>
            
            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label small"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-sm" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="AgreeToTerms" class="form-check-input" />
                <label asp-for="AgreeToTerms" class="form-check-label small">
                    I agree to the <a href="@Url.Action("Terms", "Home")" target="_blank" class="text-primary">Terms and Conditions</a>
                </label>
                <span asp-validation-for="AgreeToTerms" class="text-danger small d-block"></span>
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </button>
            </div>
            
            <input asp-for="ReturnUrl" type="hidden" />
        </form>
        
        <div class="auth-links mt-3">
            <p class="mb-1 small">Already have an account?</p>
            <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="small">
                <i class="fas fa-sign-in-alt me-1"></i>Sign In
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
