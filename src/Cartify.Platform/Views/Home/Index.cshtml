@{
    ViewData["Title"] = "Cartify - Multi-Tenant E-Commerce Platform";
}

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Launch Your Online Store in Minutes
                </h1>
                <p class="lead mb-4">
                    Cartify is the ultimate multi-tenant e-commerce platform that lets you create, manage, and scale your online store with powerful features and beautiful designs.
                </p>
                <div class="d-flex gap-3">
                    <a href="#pricing" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-rocket me-2"></i>Start Free Trial
                    </a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-4">
                        <i class="fas fa-play me-2"></i>Watch Demo
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-store fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">Everything You Need to Succeed</h2>
                <p class="lead text-muted">
                    Powerful features designed to help you build, manage, and grow your online business
                </p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-store text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Multi-Tenant Architecture</h5>
                        <p class="card-text text-muted">
                            Each vendor gets their own isolated store with custom branding, subdomain, and complete data separation.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-success bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-credit-card text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Payment Processing</h5>
                        <p class="card-text text-muted">
                            Integrated with Stripe and PayPal for secure payments. Support for multiple currencies and payment methods.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-info bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-chart-line text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Analytics & Reporting</h5>
                        <p class="card-text text-muted">
                            Comprehensive analytics dashboard with sales reports, customer insights, and performance metrics.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-warning bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-mobile-alt text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Mobile Responsive</h5>
                        <p class="card-text text-muted">
                            Beautiful, mobile-first design that works perfectly on all devices and screen sizes.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-danger bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-shipping-fast text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Order Management</h5>
                        <p class="card-text text-muted">
                            Complete order lifecycle management with inventory tracking, shipping integration, and customer notifications.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-secondary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-cogs text-white fa-2x"></i>
                        </div>
                        <h5 class="card-title">Easy Customization</h5>
                        <p class="card-text text-muted">
                            Customize your store with themes, colors, logos, and branding to match your business identity.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

